{
  "name": "VoiceHelper",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Расширение для хрома с распознаванием голосового ввода",
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "tts",
    "search",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/voice16.png",
      "32": "images/voice32.png",
      "48": "images/voice48.png",
      "128": "images/voice128.png"
    }
  },
  "icons": {
    "16": "images/voice16.png",
    "32": "images/voice32.png",
    "48": "images/voice48.png",
    "128": "images/voice128.png"
  }
}